{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": false,
    "outDir": "./dist",
    "strict": true,
    "rootDir": "./src",

    "strictPropertyInitialization": false

  },
  "include": ["src/**/*", "index.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
