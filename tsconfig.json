{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    // "incremental": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "skipLibCheck": true,


  },
  "include": ["src/**/*", "index.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
